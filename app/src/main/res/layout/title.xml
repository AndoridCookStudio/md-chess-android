<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_line"
    style="@style/AppTheme.LayoutSubHeader"
    android:layout_height="wrap_content"
    android:background="@color/material_color_grey_100"
    android:paddingBottom="@dimen/material_baseline_grid_1x"
    android:paddingTop="@dimen/material_baseline_grid_1x">

    <TextView
        android:id="@+id/txt_first"
        style="@style/AppTheme.SubHeader"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="start"
        android:paddingEnd="@dimen/material_content_edge_margin_horizontal"
        android:paddingStart="@dimen/material_content_edge_margin_horizontal" />

    <TextView
        android:id="@+id/txt_second"
        style="@style/AppTheme.SubHeader"
        android:gravity="center"
        android:text="" />

    <TextView
        android:id="@+id/txt_third"
        style="@style/AppTheme.SubHeader"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="end"
        android:paddingEnd="@dimen/material_content_edge_margin_horizontal"
        android:paddingStart="@dimen/material_content_edge_margin_horizontal" />

</LinearLayout>