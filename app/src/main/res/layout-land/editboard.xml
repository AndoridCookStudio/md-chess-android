<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:background="@color/material_color_white"
    android:orientation="horizontal">


    <view
        android:id="@+id/eb_chessboard"
        class="org.mdc.chess.activities.ChessBoardEdit"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <include layout="@layout/title" />

        <TextView
            android:id="@+id/eb_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_color_grey_100"
            android:fontFamily="monospace"
            android:gravity="center_horizontal"
            android:includeFontPadding="true"
            android:paddingBottom="@dimen/material_baseline_grid_1x"
            android:paddingEnd="@dimen/material_content_edge_margin_horizontal"
            android:paddingStart="@dimen/material_content_edge_margin_horizontal"
            android:textColor="@color/material_color_grey_800"
            android:textSize="14sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/eb_cancel"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/eb_ok"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@android:string/ok" />

    </LinearLayout>
</LinearLayout>

